                        <!--<directory>src/main/resources/development</directory>-->
                        <!--<filtering>true</filtering>-->
                    <!--</resource>-->
                <!--</resources>-->
            <!--</build>-->
        </profile>
        <profile>
            <id>production</id>
            <properties>
                <webXmlPath>src/main/config/production/WEB-INF/web.xml</webXmlPath>
            </properties>
            <!--<build>-->
                <!--<resources>-->
