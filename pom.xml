                    <!--</resource>-->
                <!--</resources>-->
            <!--</build>-->
        </profile>
        <profile>
            <id>development</id>
            <properties>
                <webXmlPath>src/main/config/development/WEB-INF/web.xml</webXmlPath>
            </properties>
            <!--<build>-->
                <!--<resources>-->
